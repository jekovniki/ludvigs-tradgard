<link rel="stylesheet" href="/themes/ludvigs/assets/styles/css/main.css">
<header class="main">
    {{ page.header }}
    {{ page.primary_menu }}
</header>
{% if page.section_1 %}
    <section id="section-top">
        {{ page.section_1 }}
    </section>
{% endif %}
{% if page.warnings_messages %}
    <mark>
        {{ page.warnings_messages }}
    </mark>
{% endif %}
{% if page.tiles %}
    <details>
        {{ page.tiles }}
    </details>
{% endif %}
{% if page.section_2 %}
    <section id="section-middle">
        {{ page.section_2 }}
    </section>
{% endif %}
{% if page.section_3 %}
    <section id="section-bottom">
        {{ page.section_3 }}
    </section>
{% endif %}
{% if page.footer %}
    <footer>
        {{ page.footer }}
    </footer>
{% endif %}
